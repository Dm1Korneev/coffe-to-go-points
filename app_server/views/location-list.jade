extends layout

include _includes/sharedHTMLfunctions

block content
  .row
    .col-lg-6
      h2= pageHeader.title
        small &nbsp;#{pageHeader.strapline}
  .row
    .col-xs-12.col-sm-8
      ul.list-group
        each location in locations
          li.list-group-item
            h4
              a(href="/location")= location.name
              small &nbsp;
              +outputRating(location.rating)
              span.badge.badge.badge-warning.float-right= location.distance
            p.adress= location.address
            each facility in location.facilities
              span.badge.badge-info= facility
              | &nbsp;    
    .col-xs-12.col-sm-4
      p= sidebar     
