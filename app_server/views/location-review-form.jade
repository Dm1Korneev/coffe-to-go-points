extends layout

block content
  .row.page-header
    .col-lg-12
      h1 Review Starcups
  .row
    .col-xs-12.col-md-8
      form(action="/location", method="get", role="form")
        .form-group.row
          label.col-xs-10.col-sm-2.col-form-label(for="name") Name
          .col-xs-12.col-sm-10
            input#name.form-control(name="name")
        .form-group.row
          label.col-xs-10.col-sm-2.col-form-label(for="rating") Rating
          .col-xs-12.col-sm-2
            select#rating.form-control.input-sm(name="rating")
              option 5
              option 4
              option 3
              option 2
              option 1
        .form-group.row 
          label.col-sm-2.col-form-label(for="review") Review
          .col-sm-10
            textarea#review.form-control(bame="review", rows="5")
        button.btn.btn-info.float-right Add my review
    .col-xs-12.col-md-4