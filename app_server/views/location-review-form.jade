extends layout

block content
  script(src='/javascripts/jquery-3.3.1.slim.min.js')
  script(src='/javascripts/validation.js')
  .row.page-header
    .col-lg-12
      h1 Review #{LocationName}
  .row
    .col-xs-12.col-md-8
      form#addReview(action="", method="post", role="form")
        -if (error == "val")
          .alert.alert-danger(role="alert") All fields required, please try again
        .form-group.row
          label.col-xs-10.col-sm-2.col-form-label(for="author") Name
          .col-xs-12.col-sm-10
            input#name.form-control(name="author")
        .form-group.row
          label.col-xs-10.col-sm-2.col-form-label(for="rating") Rating
          .col-xs-12.col-sm-2
            select#rating.form-control.input-sm(name="rating")
              option 5
              option 4
              option 3
              option 2
              option 1
        .form-group.row 
          label.col-sm-2.col-form-label(for="reviewtext") Review
          .col-sm-10
            textarea#review.form-control(name="reviewtext", rows="5")
        input.btn.btn-info.float-right(type="submit" value="Add my review")
    .col-xs-12.col-md-4